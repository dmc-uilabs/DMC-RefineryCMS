<% content_for :body_content_title do %>
  <%= @organization.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @organization.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @organization.description %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=@organization.address.attributes.each do |k,v| %>
        <div>
          <%= k %>: <%= v%>
        </div>
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="organizations">
      <% @organizations.each do |organization| %>
        <li>
          <%= link_to organization.name, refinery.organizations_organization_path(organization) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
