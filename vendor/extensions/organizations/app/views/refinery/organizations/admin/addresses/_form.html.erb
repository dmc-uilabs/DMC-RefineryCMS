<%= form_for [refinery, :organizations_admin, @address] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @address,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :street1 -%>
    <%= f.text_field :street1, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :street2 -%>
    <%= f.text_field :street2 -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>

  <div class='field'>
    <%= f.label :organization_id -%>
    <%= f.select :organization_id, Refinery::Organizations::Organization.order(:name),:id,:name, include_blank: true %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.addresses.admin.addresses.address'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @address.street1) -%>
<% end -%>
