<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(organization) -%>">
  <span class='title'>
    <%= organization.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.organizations_organization_path(organization), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_organizations_admin_organization_path(organization), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.organizations_admin_organization_path(organization), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: organization.name)}}  ) %>
  </span>
</li>
