<% content_for :body_content_title do %>
  <%= @address.street1 %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Street1</h1>
    <p>
      <%=raw @address.street1 %>
    </p>
  </section>
  <section>
    <h1>Street2</h1>
    <p>
      <%=raw @address.street2 %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @address.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @address.state %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @address.country %>
    </p>
  </section>
  <section>
    <h1>Zip</h1>
    <p>
      <%=raw @address.zip %>
    </p>
  </section>
  <section>
    <h1>Organization</h1>
    <p>
      <%=raw @address.organization_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="addresses">
      <% @addresses.each do |address| %>
        <li>
          <%= link_to address.street1, refinery.organizations_address_path(address) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
